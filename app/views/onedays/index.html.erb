<h1>記録一覧ページ</h1>

<div class="my-4"><h3>カレンダーから見たい１日を選択してください。</h3></div>

<%= month_calendar do |date| %>
  <%= link_to one_days_concrete_path(date: date) do %>
    <%= date.day %>
  <% end %>
  <table>
    <thead>
      <tr>
        <th>タスク</th>
        <th>メモ</th>
        <th>日記</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= Post.where('start_time LIKE ?', "#{date}%").count %></td> 
        <td><%= Memo.where('created_at LIKE ?', "#{date}%").count %></td>
        <td><%= OneDiary.where('created_at LIKE ?', "#{date}%").count %></td>
      </tr>
    </tbody>
  </table>
<% end %>



