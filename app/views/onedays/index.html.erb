<h1>日にちごとの記録ページ</h1>

<div class="my-3">カレンダーから見たい１日を選択してください。</div>

<%= month_calendar do |date| %>
    <%= date.day %>
    <%= link_to one_days_concrete_path(date: date) do %>
      <div>
      タスク: <%= Post.where('start_time LIKE ?', "#{date}%").count if  Post.where('start_time LIKE ?', "#{date}%").count != 0 %><br>
      メモ: <%= Memo.where('created_at LIKE ?', "#{date}%").count  if Memo.where('created_at LIKE ?', "#{date}%").count != 0 %><br>
      日記: <%= "あり" if OneDiary.where('created_at LIKE ?', "#{date}%").count==1 %>
      </div>
    <% end %>
<% end %>

