<p style="color: green"><%= notice %></p>
<%= link_to "開発一覧", developments_path, class: "btn btn-outline-primary mb-2" %>
<h1>詳細</h1>
<div class="my-3">
  <div class="mb-4">
    <h3>タイトル:</h3> <%= @development.title %><br>
  </div>
  <div class="mb-4">
    <h3>内容:</h3> <%= simple_format(@development.content) %>
  </div>
</div>
<div>
  <%= link_to "編集", edit_development_path(@development), class: "btn btn-outline-primary mt-3 mb-1" %> 
  <%= link_to '削除', @development, method: :delete, data: { turbo_method: :delete, turbo_confirm: '本当に開発メモを削除しますか'}, class: "btn btn-outline-danger" %>
</div>
