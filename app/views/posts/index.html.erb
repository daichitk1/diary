<div class="container">
  <div class="side-bar" style="padding: 10px; margin-bottom: 10px; border: 1px solid #333333; border-radius: 10px;">
    <h2>メモ一覧</h2>
    <% @memos.each do |memo| %>
      <%= link_to memo.title, memo_path(memo.id) %>
    <% end %> 
  </div>

  <div class="main-content" style="padding: 10px; margin-bottom: 10px; border: 1px solid #333333; border-radius: 10px;">
    <h1>日記アプリ</h1>
    <h2>投稿一覧</h2>
    <div class="diary my-5">
      <table>
        <thead>
          <tr>
            <th>日付</th>
            <th>タイトル</th>
            <th>中身</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.created_at.strftime("%Y-%m-%d") %></td> 
              <td><%= post.title %></td> 
              <td><%= post.content %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to '日記新規作成', new_post_path, class: "btn btn-primary" %>
    </div>

    <h2>カレンダー</h2>

    <%= month_calendar events: @posts do |date, posts| %>
      <%= date.day %>
      <% posts.each do |post| %>
        <div>
        <%= link_to post.title, post_path(post.id) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


