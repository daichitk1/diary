<h1>日記アプリ</h1>
<h2>投稿一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th>日付</th>
      <th>タイトル</th>
      <th>中身</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.created_at.strftime("%Y-%m-%d") %></td> <!-- 日付の表示 -->
        <td><%= post.title %></td> <!-- タイトルの表示 -->
        <td><%= post.content %></td> <!-- 中身の表示 -->
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '日記新規作成', new_post_path %>