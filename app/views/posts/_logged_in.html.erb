<div class="container">
  
  <div class="side-bar" style="padding: 10px; margin-bottom: 10px; border: 1px solid #333333; border-radius: 10px;">
  <h4>日記一覧</h4>
  <% @one_diaries.each do |diary| %>
    <div><%= link_to diary.date, one_diary_path(diary.id) %></div>
  <% end %> 

    <h4>メモ一覧</h4>
    <% @memos.each do |memo| %>
      <div><%= link_to memo.title, memo_path(memo.id) %></div>
    <% end %> 
    <h4 class="my-2">アカウント</h4>
    <p><a href="https://github.com/daichitk1/dairy" target="_blank">Git hub</a></p>
    <p><a href="https://www.youtube.com" target="_blank">You Tube</a></p>
    <p><a href="https://chatgpt.com/#" target="_blank">Chat GPT</a></p>
  </div>

  <div class="main-content" style="padding: 10px; margin-bottom: 10px; border: 1px solid #333333; border-radius: 10px;">
    <h1>タスク一覧</h1>
    <%= link_to 'タスク新規作成', new_post_path, class: "btn btn-primary" %>

    <div class="my-5" style="padding: 10px; margin-bottom: 10px; border: 1px solid #333333; border-radius: 10px;">
    <h3>毎日タスク一覧</h3>
     <div class="diary my-5">
      <table class="table">
        <thead>
        <tr>
            <th>タイトル</th>
            <th>状態</th>
            <th>重要度</th>
        </tr>
        </thead>
        <tbody>
        <% @every_day_posts.each do |post| %>
            <tr> 
            <td><%= link_to post.title, edit_post_path(post) %></td> 
            <td><%= I18n.t("activerecord.attributes.post.status.#{post.status}", locale: :ja) %></td>
            <td><div class="<%= if post.important_status == 'normal' 
                'badge bg-primary' 
          elsif post.important_status == 'important' 
                'badge bg-danger' 
          else  
                 'badge bg-success'
          end %>">
<%= I18n.t("activerecord.attributes.post.important_status.#{post.important_status}", locale: :ja) %>
</div></td>
            </tr>
        <% end %>
        </tbody>
      </table>
     </div>
    </div>

    <div class="my-5" style="padding: 10px; margin-bottom: 10px; border: 1px solid #333333; border-radius: 10px;">
    <h3>重要タスク一覧</h3>
    <div class="diary my-5">
      <table class="table">
        <thead>
          <tr>
            <th>日付</th>
            <th>タイトル</th>
            <th>状態</th>
            <th>重要度</th>
          </tr>
        </thead>
        <tbody>
          <% @important_posts.each do |post| %>
            <tr>
              <td><%= post.created_at.strftime("%Y-%m-%d") %></td> 
              <td><%= link_to post.title, edit_post_path(post) %></td> 
              <td><%= I18n.t("activerecord.attributes.post.status.#{post.status}", locale: :ja) %></td>
              <td><div class="<%= if post.important_status == 'normal' 
                'badge bg-primary' 
          elsif post.important_status == 'important' 
                'badge bg-danger' 
          else  
                 'badge bg-success'
          end %>">
<%= I18n.t("activerecord.attributes.post.important_status.#{post.important_status}", locale: :ja) %>
</div></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>

    <div style="padding: 10px; margin-bottom: 10px; border: 1px solid #333333; border-radius: 10px;">
        <h3>未対応直近タスク一覧</h3>
        <div class="diary my-5">
        <table class="table">
            <thead>
            <tr>
                <th>日付</th>
                <th>タイトル</th>
                <th>状態</th>
                <th>重要度</th>
            </tr>
            </thead>
            <tbody>
            <% @unprocessed_posts.each do |post| %>
                <tr>
                <td><%= post.created_at.strftime("%Y-%m-%d") %></td> 
                <td><%= link_to post.title, edit_post_path(post) %></td> 
                <td><%= I18n.t("activerecord.attributes.post.status.#{post.status}", locale: :ja) %></td>
                <td><div class="<%= if post.important_status == 'normal' 
                    'badge bg-primary' 
              elsif post.important_status == 'important' 
                    'badge bg-danger' 
              else  
                     'badge bg-success'
              end %>">
<%= I18n.t("activerecord.attributes.post.important_status.#{post.important_status}", locale: :ja) %>
</div></td>
                </tr>
            <% end %>
            </tbody>
        </table>
        </div>

        <h3>対応中直近タスク一覧</h3>
        <div class="diary my-5">
            <table class="table">
            <thead>
                <tr>
                <th>日付</th>
                <th>タイトル</th>
                <th>状態</th>
                <th>重要度</th>
                </tr>
            </thead>
            <tbody>
                <% @progress_posts.each do |post| %>
                <tr>
                    <td><%= post.created_at.strftime("%Y-%m-%d") %></td> 
                    <td><%= link_to post.title, edit_post_path(post.id) %></td> 
                    <td><%= I18n.t("activerecord.attributes.post.status.#{post.status}", locale: :ja) %></td>
                    <td>
                    <div class="<%= if post.important_status == 'normal' 
                        'badge bg-primary' 
                  elsif post.important_status == 'important' 
                        'badge bg-danger' 
                  else  
                         'badge bg-success'
                  end %>">
    <%= I18n.t("activerecord.attributes.post.important_status.#{post.important_status}", locale: :ja) %>
  </div></td>
                    
                </tr>
                </tr>
                <% end %>
            </tbody>
            </table>
            </div>
        </div>
  

    
    <h2>カレンダー</h2>

    <%= month_calendar events: @posts do |date, posts| %>
      <%= date.day %>
      <% posts.each do |post| %>
        <div>
        <%= link_to post.title, post_path(post.id) %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>


